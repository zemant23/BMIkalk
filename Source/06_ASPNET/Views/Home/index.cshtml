@model _06_ASPNET.Models.BmiModel
@{
    ViewData["Title"] = "BMI Kalkulačka";
}

<div class="container">
    <h2 class="mt-4 mb-4">Kalkulačka BMI</h2>

    <form method="post">
        <div class="form-group mb-3">
            <label for="Vyska" class="form-label">Výška (v metrech):</label>
            <input type="number" step="0.01" id="Vyska" name="Vyska" value="@Model.Vyska" class="form-control" placeholder="Např.: 1.75" />
        </div>

        <div class="form-group mb-3">
            <label for="Vaha" class="form-label">Váha (v kilogramech):</label>
            <input type="number" step="0.1" id="Vaha" name="Vaha" value="@Model.Vaha" class="form-control" placeholder="Např.: 70" />
        </div>

        <button type="submit" class="btn btn-primary">Vypočítat BMI</button>
    </form>

    @if (Model.BmiVysledek.HasValue)
    {
            <div class="mt-4">
                <h3>Výsledek:</h3>
                <div class="alert alert-info">
                    <p>Vaše BMI: <strong>@Model.BmiVysledek.Value.ToString("F2")</strong></p>
                    <p>Kategorie: <strong>@Model.BmiKategorie</strong></p>
                </div>
            </div>
    }
</div>